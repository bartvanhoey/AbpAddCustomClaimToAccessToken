          "args": [],
          "cwd": "${workspaceFolder}/src/BookStore.DbMigrator",
          "stopAtEntry": false,
          "env": {
              "ASPNETCORE_ENVIRONMENT": "Staging"
          },
          "sourceFileMap": {
              "/Views": "${workspaceFolder}/Views"
          }
      }
